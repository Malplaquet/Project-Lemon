{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <h1>Connexion</h1>

  <form action="{{ path('security_login') }}" method="post">
    <div class="form-group">
      <input type="text" class="form-control" name="_username" placeholder="Adresse email" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="_password" placeholder="Mot de passe" required>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success" name="button">Se connecter</button>
    </div>
  </form>
</div>
{% endblock %}
